{
    "name": "PHP Web Server",
    "image": "mcr.microsoft.com/vscode/devcontainers/php:latest",
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "felixfbecker.php-debug",
      "bmewburn.vscode-intelephense-client"
    ],
    "forwardPorts": [8000],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libapache2-mod-php",
    "remoteUser": "vscode"
  }
  